<div class="col-md-4 col-md-offset-4">
    <%= form_for @event do |e|%>
    <%= e.label "Description",:description %>
    <%= e.text_area :description,class: 'form-control' %>
    <br />
    <%= e.label "Date", :date %>
    <%= e.date_field :date,class: 'form-control' %>
    <br />
    <%= e.submit 'Create new event',class: 'form-control btn-primary'%>
    <% end %>
</div>